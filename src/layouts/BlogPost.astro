---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  tags?: string[];
}

const { title, description, pubDate, heroImage, tags } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen">
      <nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div class="max-w-4xl mx-auto px-4 py-4">
          <a href="/" class="text-lg font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
            ‚Üê Back to Home
          </a>
        </div>
      </nav>

      <main class="max-w-4xl mx-auto px-4 py-12">
        <article>
          {heroImage && (
            <img
              src={heroImage}
              alt={title}
              class="w-full h-64 object-cover rounded-lg mb-8"
            />
          )}

          <header class="mb-8">
            <div class="mb-4">
              <time class="text-sm text-gray-500 dark:text-gray-400">{formattedDate}</time>
            </div>

            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
              {title}
            </h1>

            <p class="text-xl text-gray-600 dark:text-gray-300 mb-4">
              {description}
            </p>

            {tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="text-xs px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </header>

          <div class="prose prose-lg dark:prose-invert max-w-none">
            <slot />
          </div>
        </article>
      </main>

      <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-16">
        <div class="max-w-4xl mx-auto px-4 py-8 text-center text-gray-600 dark:text-gray-400">
          <p>&copy; {new Date().getFullYear()} Sam Hesson. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
