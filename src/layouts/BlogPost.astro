---
import '../styles/global.css';
import ScrollProgress from '../components/ScrollProgress';
import { getReadingTime } from '../utils/readingTime';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  tags?: string[];
  rawContent?: string;
}

const { title, description, pubDate, heroImage, tags, rawContent } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calculate reading time from raw markdown content
const readingTime = rawContent ? getReadingTime(rawContent) : null;

// Get the current URL for canonical and og:url
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site || 'https://samhesson.dev');

// Open Graph image
const ogImage = heroImage || `${Astro.site || 'https://samhesson.dev'}/og-default.png`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Sam Hesson's Blog" href="/rss.xml" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} - Sam Hesson</title>
    <meta name="title" content={`${title} - Sam Hesson`} />
    <meta name="description" content={description} />
    <meta name="author" content="Sam Hesson" />
    {tags && tags.length > 0 && (
      <meta name="keywords" content={tags.join(', ')} />
    )}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Sam Hesson's Blog" />
    <meta property="article:published_time" content={pubDate.toISOString()} />
    <meta property="article:author" content="Sam Hesson" />
    {tags && tags.map(tag => (
      <meta property="article:tag" content={tag} />
    ))}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:creator" content="@samhesson" />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
  </head>
  <body class="bg-warm-sand-50 dark:bg-dark-bg-primary">
    <ScrollProgress client:load />
    <div class="min-h-screen">
      <nav class="bg-warm-sand-100 dark:bg-dark-bg-secondary border-b border-driftwood-200 dark:border-dark-border rounded-b-[24px]">
        <div class="max-w-4xl mx-auto px-4 py-4">
          <a href="/" class="text-lg font-bold text-void-400 dark:text-warm-sand-100 hover:text-living-green-500 dark:hover:text-living-green-300 transition-colors">
            ← Back to Home
          </a>
        </div>
      </nav>

      <main class="max-w-4xl mx-auto px-4 py-12">
        <article>
          {heroImage && (
            <img
              src={heroImage}
              alt={title}
              class="w-full h-64 object-cover rounded-[24px] mb-8 shadow-md"
            />
          )}

          <header class="mb-8">
            <div class="mb-4 flex items-center gap-3">
              <time class="text-sm text-void-100 dark:text-driftwood-300">{formattedDate}</time>
              {readingTime && (
                <>
                  <span class="text-void-100 dark:text-driftwood-300">•</span>
                  <span class="text-sm text-void-100 dark:text-driftwood-300">{readingTime}</span>
                </>
              )}
            </div>

            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-void-400 dark:text-warm-sand-100" style="letter-spacing: -0.02em;">
              {title}
            </h1>

            <p class="text-xl text-void-200 dark:text-driftwood-200 mb-4">
              {description}
            </p>

            {tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="text-xs px-3 py-1 bg-living-green-100 dark:bg-living-green-500/20 text-living-green-500 dark:text-living-green-200 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </header>

          <div class="prose prose-lg dark:prose-invert max-w-none">
            <slot />
          </div>
        </article>
      </main>

      <footer class="bg-warm-sand-100 dark:bg-dark-bg-secondary border-t border-driftwood-200 dark:border-dark-border mt-16 rounded-t-[24px]">
        <div class="max-w-4xl mx-auto px-4 py-8 text-center text-void-200 dark:text-driftwood-200">
          <p>&copy; {new Date().getFullYear()} Sam Hesson. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
