---
import { getCollection } from 'astro:content';
import BlogPostCard from '../components/BlogPostCard';
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');

// Filter drafts in production, show all in dev
const isDev = import.meta.env.DEV;
const visiblePosts = allPosts.filter(post => {
  if (isDev) return true; // Show all posts in dev mode
  return !post.data.draft; // Hide drafts in production
});

const sortedPosts = visiblePosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Sam Hesson - Blog"
  description="Sam Hesson's personal blog on web development, technology, and more"
  currentPage="home"
  variant="default"
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-void-400 dark:text-warm-sand-100">Recent Posts</h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map((post, index) => (
        <BlogPostCard
          client:load
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
          draft={post.data.draft}
        />
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <div class="text-center py-12">
        <p class="text-void-200 dark:text-driftwood-200">No posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
