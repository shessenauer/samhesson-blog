---
import { getCollection } from 'astro:content';
import BlogPostCard from '../components/BlogPostCard';
import '../styles/global.css';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Sam Hesson's personal blog on web development, technology, and more" />
    <title>Sam Hesson - Blog</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen">
      <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div class="max-w-6xl mx-auto px-4 py-16 text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-4 text-gray-900 dark:text-white">
            Sam Hesson
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Thoughts on web development, technology, and more
          </p>
        </div>
      </header>

      <main class="max-w-6xl mx-auto px-4 py-12">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Recent Posts</h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {sortedPosts.map((post, index) => (
            <BlogPostCard
              client:load
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              tags={post.data.tags}
            />
          ))}
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-600 dark:text-gray-400">No posts yet. Check back soon!</p>
          </div>
        )}
      </main>

      <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-16">
        <div class="max-w-6xl mx-auto px-4 py-8 text-center text-gray-600 dark:text-gray-400">
          <p>&copy; {new Date().getFullYear()} Sam Hesson. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
